<div class="card md-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;">
    {% endif %}
    <div class="card-body">
        <h4 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" class="">
                {{ property.title }}
            </a>
        </h4>
        <p class="card-text">{{ property.surface }} mÂ² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-weight: bold">
            {{ property.formattedPrice }}
        </div>
    </div>
</div>